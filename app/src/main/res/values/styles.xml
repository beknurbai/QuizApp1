<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_nav_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="main_fr_spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_fr_text_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="btn_start_main_fr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_horizontal</item>
        <item name="android:background">@drawable/background_btn_start</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="seek_bar_main_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressBackgroundTint">@color/OtherGrayishViolet</item>
        <item name="android:progressTint">@color/BrightViolet</item>
        <item name="android:max">50</item>
        <item name="android:thumbTint">@color/BrightViolet</item>
    </style>

    <style name="history_style_for_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/colorDesc</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="item_btn_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6979F8</item>
    </style>

    <style name="def_btn_style">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/button_def</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="rec_view_with_question">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginBottom">200dp</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="skip_btn_style">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">77dp</item>
        <item name="android:background">@drawable/btn_skip_background</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="navigation">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#1A051D</item>
    </style>

    <style name="difficulty">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A9A9A9</item>
    </style>

    <style name="btn_finish_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>